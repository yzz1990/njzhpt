<script type="text/javascript">
var mydate = new Date();
var vyear = mydate.getFullYear();
var vmonth = mydate.getMonth();


$(window).load(function() {
	
	
	$(".cjd-select").select2();
	

	
	
});

$(function(){
	//加载年度下拉框
	for(var i = 0; i < 3 ; i++){
		var op = '<option  value="'+(vyear-i)+'">'+(vyear-i)+'</option>';
		$("#niandu").append(op);
	}
	var qmonth;
	var qyear;
	if(vmonth > 0){
		qmonth = vmonth;
		qyear = vyear;
	}else{
		qmonth = 12;
		qyear = vyear - 1;
	}
	$("#niandu").val(qyear);
    $("#niandu-div").find(".select2-selection__rendered").text(qyear);
	$("#niandu-div").find(".select2-selection__rendered").attr("title",qyear);
	//初始化采价点下拉框
	$("#yuedu").val(qmonth);
    $("#yuedu-div").find(".select2-selection__rendered").text(qmonth);
	$("#yuedu-div").find(".select2-selection__rendered").attr("title",qmonth);
	searym(qyear,qmonth);
	
});

//生成期货价格表
function doSearch(){
	var year = $("#niandu option:selected").val();
	var month = $("#yuedu option:selected").val();
	searym(year,month);
	
}

function searym(year,month){
	//加载外盘期货
	$.ajax({
		url:'${ctxPath}/jiage/findwpqihuo',
		type:'post',
		data:{"year":year,"month":month},
		dataType:'json',
		success:function(data){
			$.each(data.list.list,function(i, n){
				if(n.pinzhong == "黄豆"){
					$("#wp_hd_price").text(n.price.toFixed(2));
					if((n.price - n.hprice) > 0){
						$("#wp_hd_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#wp_hd_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					
					$("#wp_tb_hd_zze").text((n.price - n.tprice).toFixed(2));
					$("#wp_tb_hd_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#wp_hb_hd_zze").text((n.price - n.hprice).toFixed(2));
					$("#wp_hb_hd_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "小麦"){
					$("#wp_xm_price").text(n.price.toFixed(2));
					if((n.price - n.hprice) > 0){
						$("#wp_xm_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#wp_xm_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#wp_tb_xm_zze").text((n.price - n.tprice).toFixed(2));
					$("#wp_tb_xm_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#wp_hb_xm_zze").text((n.price - n.hprice).toFixed(2));
					$("#wp_hb_xm_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "豆油"){
					$("#wp_dy_price").text(n.price.toFixed(2));
					if((n.price - n.hprice) > 0){
						$("#wp_dy_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#wp_dy_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#wp_tb_dy_zze").text((n.price - n.tprice).toFixed(2));
					$("#wp_tb_dy_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#wp_hb_dy_zze").text((n.price - n.hprice).toFixed(2));
					$("#wp_hb_dy_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "玉米"){
					$("#wp_ym_price").text(n.price.toFixed(2));
					if((n.price - n.hprice) > 0){
						$("#wp_ym_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#wp_ym_price").html(n.price.toFixed(2) + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#wp_tb_ym_zze").text((n.price - n.tprice).toFixed(2));
					$("#wp_tb_ym_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#wp_hb_ym_zze").text((n.price - n.hprice).toFixed(2));
					$("#wp_hb_ym_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
			});
		},
		error:function(){
			alert("加载外盘期货失败");
		}
	});
	
	
	$.ajax({
		url:'${ctxPath}/jiage/querywpqihuo.do',
		type:'post',
		data:{"year":year,"month":month},
		dataType:'json',
		success:function(data){
			var pz = ["黄豆","小麦","豆油","玉米"];
			//年月
			var jdny = [];
			var bnny = [];
			var ndny = [];
			//季度价格
			var jdhdprice = [];
			var jdxmprice = [];
			var jddyprice = [];
			var jdymprice = [];
			//半年度价格
			var bnhdprice = [];
			var bnxmprice = [];
			var bndyprice = [];
			var bnymprice = [];
			//年度
			var ndhdprice = [];
			var ndxmprice = [];
			var nddyprice = [];
			var ndymprice = [];
			//季度
			var lmonth = month;
			jdny.push(year+"年"+month+"月");
			bnny.push(year+"年"+month+"月");
			ndny.push(year+"年"+month+"月");
			
			for(var i = 0; i < 48; i ++){
				//把时间放入数组
				if(data.list[i].month != lmonth ){
					jdny.push(data.list[i].year+"年"+data.list[i].month+"月");
					bnny.push(data.list[i].year+"年"+data.list[i].month+"月");
					ndny.push(data.list[i].year+"年"+data.list[i].month+"月");
					lmonth = data.list[i].month;
				}
				if(data.list[i].pinzhong == "黄豆"){
					jdhdprice.push(data.list[i].price);
					bnhdprice.push(data.list[i].price);
					ndhdprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "小麦"){
					jdxmprice.push(data.list[i].price);
					bnxmprice.push(data.list[i].price);
					ndxmprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "豆油"){
					jddyprice.push(data.list[i].price);
					bndyprice.push(data.list[i].price);
					nddyprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "玉米"){
					jdymprice.push(data.list[i].price);
					bnymprice.push(data.list[i].price);
					ndymprice.push(data.list[i].price);
				}				
			}
		
			//截取季度和半年度的时间及价格
			jdny = jdny.slice(0,3);
			bnny = bnny.slice(0,6);
			//ndny = ndny.slice(0,12);
			//黄豆
			jdhdprice = jdhdprice.slice(0,3);
			bnhdprice = bnhdprice.slice(0,6);
			//ndhdprice = ndhdprice.slice(0,12);
			//小麦
			jdxmprice = jdxmprice.slice(0,3);
			bnxmprice = bnxmprice.slice(0,6);
			//ndxmprice = ndxmprice.slice(0,12);
			//豆油
			jddyprice = jddyprice.slice(0,3);
			bndyprice = bndyprice.slice(0,6);
			//nddyprice = nddyprice.slice(0,12);
			//玉米
			jdymprice = jdymprice.slice(0,3);
			bnymprice = bnymprice.slice(0,6);
			//ndymprice = ndymprice.slice(0,12);
			
			jdny.reverse();
			bnny.reverse();
			ndny.reverse();
			jdhdprice.reverse();
			jdxmprice.reverse();
			jddyprice.reverse();
			jdymprice.reverse();
			bnhdprice.reverse();
			bnxmprice.reverse();
			bndyprice.reverse();
			bnymprice.reverse();
			ndhdprice.reverse();
			ndxmprice.reverse();
			nddyprice.reverse();
			ndymprice.reverse();
			
			
			var myChart = echarts.init(document.getElementById('paneljidu')); 	//季度趋势
			var myChart1 = echarts.init(document.getElementById('panelbannian'));	//半年趋势
			var myChart2 = echarts.init(document.getElementById('panelniandu')); 	//年度趋势
			//季度折线图
			option = {
			    title: {
			        text: '季度国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data: jdny
			    },
			    yAxis: {
					name:'单位(吨)',
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:jdhdprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:jdxmprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:jddyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:jdymprice,
			        }
			        
			    ]
			};
			myChart.setOption(option);
			
			//半年度折线图
			option1 = {
			    title: {
			        text: '半年国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data: bnny
			    },
			    yAxis: {
					name:'单位(吨)',
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:bnhdprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:bnxmprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:bndyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:bnymprice,
			        }
			    ]
			};
			myChart1.setOption(option1);
			
			//半年度折线图
			option2 = {
			    title: {
			        text: '一年国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data: ndny
			    },
			    yAxis: {
					name:'单位(吨)',
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:ndhdprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:ndxmprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:nddyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:ndymprice,
			        }
			    ]
			};
			myChart2.setOption(option2);
			
		},
		error:function(){
			alert("遍历国内期货连续失败");
		}
	});
}


function getjd(){
	$("#paneljidu").css('display','block');
	$("#panelbannian").css('display','none');
	$("#panelniandu").css('display','none');
}
function getbn(){
	$("#paneljidu").css('display','none');
	$("#panelbannian").css('display','block');
	$("#panelniandu").css('display','none');
}
function getyn(){
	$("#paneljidu").css('display','none');
	$("#panelbannian").css('display','none');
	$("#panelniandu").css('display','block');
}

</script>
