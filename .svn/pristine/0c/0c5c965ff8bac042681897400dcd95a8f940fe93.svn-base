<script type="text/javascript">
	var vfid;
	var vcengshu;
	var visend;
	var vname;
	var xiugai = 0;
	$(function() {
		$("#pinzhong").select2();
		$("#vgrade").select2();
		
		//
		//加载应急状态列表
		datatable = $('.datatables').DataTable({
			"pageLength": 10,
			"lengthMenu": [
			       		[5,10,15,20,10000],
			       		[5,10,15,20, "所有"]
			       	],
	        "columns": [
	            {
					"render": function (data,type,row,meta) {
						var name = row["name"];
						if(name == null){
							name = "";
						}
						var div = '<div style="text-align:center">'+name+'</div>';	
						return div;
					}
				},{
					"render": function (data,type,row,meta) {
						var zhiwu = row["zhiwu"];
						if(zhiwu == null){
							zhiwu = "";
						}
						var div = '<div style="text-align:center">'+zhiwu+'</div>';
						return div;								
					}
				},{
					"render": function (data,type,row,meta) {
						var bumen = row["bumen"];
						if(bumen == null){
							bumen = "";
						}
						var div = '<div>'+bumen+'</div>';
						return div;								
					}
				},{
					"render": function (data,type,row,meta) {
						var diqu = row["diqu"];
						if(diqu == null){
							diqu = "";
						}
						var div = '<div>'+diqu+'</div>';
						return div;								
					}
				},{
					"render": function (data,type,row,meta) {
						var guding = row["guding"];
						if(guding == null){
							guding = "";
						}
						var div = '<div>'+guding+'</div>';
						return div;								
					}
				},{
					"render": function (data,type,row,meta) {
						var tel = row["tel"];
						if(tel == null){
							tel = "";
						}
						var div = '<div>'+tel+'</div>';
						return div;								
					}
				},{
					"render": function (data,type,row,meta) {
						var beizhu = row["beizhu"];
						if(beizhu == null){
							beizhu = "";
						}
						var div = '<div>'+beizhu+'</div>';
						return div;								
					}
				}
				]
		});
		
		gettree();
	});
	
	
	function gettree(){
		$("#sysp").empty();
		//树形结构方式加载粮食品种
		$.ajax({
					url : '${ctxPath}/emergency/querytree.do',
					type : 'post',
					data : {
						"page" : 1,
						"rows" : 100
					},
					dataType : 'json',
					success : function(data) {
						//=======================================动态加载tree=================================
						var num = data.list.length;
						var ceng;

						for (var j = 0; j < num; j++) {
							var li;
							//处理根节点
							if(data.list[j].cengshu == 1){
								
								
								if(data.list[j].isend == 0){
									li = '<li id="'+data.list[j].id+'" ceng="1" isend="0"><a href="#" ref="sypz">&nbsp;'
									+ data.list[j].name
									+ '</a></li><ul></ul>';
									$("#sysp").append(li);
								}else{
									li = '<li id="'+data.list[j].id+'" ceng="1" isend="1"><a href="#" ref="sypz">&nbsp;'
									+ data.list[j].name
									+ '</a></li>';
									$("#sysp").append(li);
								}
								
					
							}else{
								if(data.list[j].isend == 0){
									var fujiedian = data.list[j].shangji;
									var ceng = data.list[j].cengshu;
									li = '<li id="'+data.list[j].id+'" ceng="'+ceng+'" isend="0"><a href="#" ref="sypz">&nbsp;'
											+ data.list[j].name + '</a></li><ul></ul>';
									$("#" + fujiedian).next().append(li);
								}else{
									var fujiedian = data.list[j].shangji;
									var ceng = data.list[j].cengshu;
									li = '<li id="'+data.list[j].id+'" ceng="'+ceng+'" isend="1"><a href="#" ref="sypz">&nbsp;'
											+ data.list[j].name + '</a></li>';
									$("#" + fujiedian).next().append(li);
								}
								
							}
		
						}
						//=======================================动态加载tree（结束）=================================
						//=====================================a的单击事件===================================

						$(".st_tree")
								.SimpleTree(
										{
											click : function(a) {
												if (!$(a).attr("hasChild")) {
													alert($(a).attr("ref"));
												}
												//增加和删除a的选中状态
												$("a").removeClass("active");
												$(a).addClass("active")
														.siblings()
														.removeClass("active");
												var fid = $(a).parent().attr("id");
												var isend = $(a).parent().attr("isend");
												vfid = fid;
												vcengshu = $(a).parent().attr("ceng");
												visend = $(a).parent().attr("isend");
												vname = $(a).text();
												if(isend == 1){
													$(".datatables").attr("data-queryparam","&id="+fid);
													datatable.ajax.reload(null,true);
												}else{
													$(".datatables").attr("data-queryparam","&fid="+fid);
													datatable.ajax.reload(null,true);
												}
											}
										});
						//===================================a的单击事件(结束)===================================
					},
					error : function() {
						alert("读取品种失败");
					}
				});
	}
	
	//增加部门
	function addbm(){
		if(vcengshu != "" && vcengshu != null){
			if(visend != 1){
				dialog1=BootstrapDialog.show({
				    title: '新增部门',
				    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="no" src="${ctxPath}/renyuan/renyuanguanli/addbm.html?fid='+vfid+'&cengshu='+vcengshu+'"/>'),
				    onshow:function(dlg){
			       	dlg.$modalDialog.css("width","500px");//modal-dialog
			       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","400px");//modal-dialog
			       },
			       buttons: [{
			           label: '保存',
			           action: function(dialog) {
			        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.savebumen(); 
			        	   /* parent.window.dialog1.close();
			        	   parent.window.datatable.ajax.reload(null,true); */
			           },
			          cssClass: 'btn-xs btn-success'
			          
			       },{
			           label: '关闭',
			           action: function(dialog) {
			               dialog.close();
			           },
			          cssClass: 'btn-xs btn-danger'
			       }]
				});
			}else{
				alert("不能在人员下新增部门");
			}

		}else{
			alert("请选择节点再进行增加");
		}
		
	}

	function addry() {
		if(vcengshu != "" && vcengshu != null){
			if(visend != 1){
				dialog1=BootstrapDialog.show({
				    title: '新增人员',
				    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="yes" src="${ctxPath}/renyuan/renyuanguanli/addrenyuan.html?fid='+vfid+'&cengshu='+vcengshu+'"/>'),
				    onshow:function(dlg){
			       	dlg.$modalDialog.css("width","600px");//modal-dialog
			       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","600px");//modal-dialog
			       },
			       buttons: [{
			           label: '保存',
			           action: function(dialog) {
			        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.saverenyuan(); 
			        	   
			           },
			          cssClass: 'btn-xs btn-success'
			          
			       },{
			           label: '关闭',
			           action: function(dialog) {
			               dialog.close();
			           },
			          cssClass: 'btn-xs btn-danger'
			       }]
				});
			}else{
				alert("不能在人员下新增人员");
			}
			
		}else{
			alert("请选择节点再进行增加");
		}	
	}

	//刷新树形结构
	function updatePz() {
		gettree();
		//location.reload();
	}

	function deletery() {
		if(vname==""||vname==undefined||vname==null){
			alert("请选择要删除的部门或人员！");
			return false;
		}
		if(vname.trim() == "全部人员"){
			alert("无法删除根节点");
		}else{
			if (confirm("是否删除节点" + vname)) {
				if(visend == 1){
					$.ajax({
						url:'${ctxPath}/emergency/delry',
						type:'post',
						data:{"id":vfid},
						dataType:'json',
						success:function(msg){
							if (msg.ret != "false") {
								vname="";
								vcengshu="";
								alert("删除成功");
							} else {
								alert(msg.message);
							}
							gettree();
						},
						error:function(){
							alert("删除失败");
						}
					});
				}else{
					$.ajax({
						url:'${ctxPath}/emergency/delbumen',
						type:'post',
						data:{"id":vfid},
						dataType:'json',
						success:function(msg){
							if (msg.ret == "false") {
								alert(msg.message);
							} else {
								vname="";
								vcengshu="";
								alert("删除成功");
							}
							gettree();
						},
						error:function(){
							alert("删除失败");
						}
					});	
				}
			}
		}
	}
</script>
