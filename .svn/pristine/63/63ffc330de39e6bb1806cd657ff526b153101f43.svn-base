							$("#lhpzts_fpzbl").val(data.ret.fpzbl);
							$("#lhpzts_zzscnx").val(data.ret.zzscnx);
							//fpzbudiyu 1 3 5 分别对应小麦粳稻籼稻 条件满足
							//fpzbudiyu 2 4 6 分别对应小麦粳稻籼稻 条件不满足
