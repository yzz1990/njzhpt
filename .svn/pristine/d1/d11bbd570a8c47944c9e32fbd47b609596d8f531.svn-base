<script type="text/javascript">

var mydate = new Date();
var vyear = mydate.getFullYear();
var vmonth = mydate.getMonth();
var vwidth;
var vheight;

$(window).load(function() {
	//加载年度下拉框
	for(var i = 0; i < 5 ; i++){
		var op = '<option value="'+(vyear-i)+'">'+(vyear-i)+'</option>';
		$("#niandu").append(op);
	}
	$(".cjd-select").select2();
	
});

$(function(){
	var qmonth;
	var qyear;
	if(vmonth > 0){
		qmonth = vmonth;
		qyear = vyear;
	}else{
		qmonth = 12;
		qyear = vyear - 1;
	}
	vwidth = $("#container3").width();
	vheight = $("#container3").height();
	$("#panelbannian").width(vwidth);
	$("#panelbannian").height(vheight);
	$("#panelniandu").width(vwidth);
	$("#panelniandu").height(vheight);
	//alert(vwidth+","+vheight);
	
	$("#niandu").val(qyear);
    $(".niandu-div").find(".select2-selection__rendered").text(qyear);
	$(".niandu-div").find(".select2-selection__rendered").attr("title",qyear);
	//初始化采价点下拉框
	$("#yuedu").val(qmonth);
    $(".yuedu-div").find(".select2-selection__rendered").text(qmonth);
	$(".yuedu-div").find(".select2-selection__rendered").attr("title",qmonth);
	
	searym(qyear,qmonth);
});

//生成期货价格表
function doSearch(){
	var year = $("#niandu option:selected").val();
	var month = $("#yuedu option:selected").val();
	searym(year,month);
	
}

function searym(year,month){
	$.ajax({
		url:'${ctxPath}/jiage/querywpqihuo.do',
		type:'post',
		data:{"year":year,"month":month},
		dataType:'json',
		success:function(data){
			var pz = ["黄豆","小麦","豆油","玉米"];
			//年月
			var jdny = [];
			var bnny = [];
			var ndny = [];
			//季度价格
			var jdhdprice = [];
			var jdxmprice = [];
			var jddyprice = [];
			var jdymprice = [];
			//半年度价格
			var bnhdprice = [];
			var bnxmprice = [];
			var bndyprice = [];
			var bnymprice = [];
			//年度
			var ndhdprice = [];
			var ndxmprice = [];
			var nddyprice = [];
			var ndymprice = [];
			//季度
			var lmonth = month;
			jdny.push(year+"年"+month+"月");
			bnny.push(year+"年"+month+"月");
			ndny.push(year+"年"+month+"月");
			
			for(var i = 0; i < 48; i ++){
				//把时间放入数组
				if(data.list[i].month != lmonth ){
					jdny.push(data.list[i].year+"年"+data.list[i].month+"月");
					bnny.push(data.list[i].year+"年"+data.list[i].month+"月");
					ndny.push(data.list[i].year+"年"+data.list[i].month+"月");
					lmonth = data.list[i].month;
				}
				if(data.list[i].pinzhong == "黄豆"){
					jdhdprice.push(data.list[i].price);
					bnhdprice.push(data.list[i].price);
					ndhdprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "小麦"){
					jdxmprice.push(data.list[i].price);
					bnxmprice.push(data.list[i].price);
					ndxmprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "豆油"){
					jddyprice.push(data.list[i].price);
					bndyprice.push(data.list[i].price);
					nddyprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "玉米"){
					jdymprice.push(data.list[i].price);
					bnymprice.push(data.list[i].price);
					ndymprice.push(data.list[i].price);
				}				
			}
			//截取季度和半年度的时间及价格
			jdny = jdny.slice(0,3);
			bnny = bnny.slice(0,6);
			//黄豆
			jdhdprice = jdhdprice.slice(0,3);
			bnhdprice = bnhdprice.slice(0,6);
			//小麦
			jdxmprice = jdxmprice.slice(0,3);
			bnxmprice = bnxmprice.slice(0,6);
			//豆油
			jddyprice = jddyprice.slice(0,3);
			bndyprice = bndyprice.slice(0,6);
			//玉米
			jdymprice = jdymprice.slice(0,3);
			bnymprice = bnymprice.slice(0,6);
			
			jdny.reverse();
			bnny.reverse();
			ndny.reverse();
			jdhdprice.reverse();
			jdxmprice.reverse();
			jddyprice.reverse();
			jdymprice.reverse();
			bnhdprice.reverse();
			bnxmprice.reverse();
			bndyprice.reverse();
			bnymprice.reverse();
			ndhdprice.reverse();
			ndxmprice.reverse();
			nddyprice.reverse();
			ndymprice.reverse();
			
			
			var myChart = echarts.init(document.getElementById('paneljidu')); 	//季度趋势
			var myChart1 = echarts.init(document.getElementById('panelbannian'));	//半年趋势
			var myChart2 = echarts.init(document.getElementById('panelniandu')); 	//年度趋势
			//季度折线图
			option = {
			    title: {
			        text: '季度国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz,
			        textStyle:{
			        	fontSize:25,
			        }
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data:[
			          {
		        		value:jdny[0],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			       	{
		        		value:jdny[1],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			       	{
		        		value:jdny[2],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			        ]
			        
			    },
			    yAxis: {
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:jdhdprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:jdxmprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:jddyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:jdymprice,
			        }
			        
			    ]
			};
			myChart.setOption(option);
			
			//半年度折线图
			option1 = {
			    title: {
			        text: '半年国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz,
			        textStyle:{
			        	fontSize:25,
			        }
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data:[
			          {
		        		value:bnny[0],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			       	{
		        		value:bnny[1],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			       	{
		        		value:bnny[2],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			       	{
		        		value:bnny[3],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			       	{
		        		value:bnny[4],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			       	{
		        		value:bnny[5],
			        	textStyle:{
				        	fontSize:20,
			        	}
			       	 },
			        ]
			    },
			    yAxis: {
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:bnhdprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:bnxmprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:bndyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:bnymprice,
			        }
			    ]
			};
			myChart1.setOption(option1);
			
			//半年度折线图
			option2 = {
			    title: {
			        text: '一年国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz,
			        textStyle:{
			        	fontSize:25,
			        }
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data:[
				          {
			        		value:ndny[0],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[1],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[2],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[3],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[4],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[5],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[6],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[7],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[8],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[9],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[10],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				       	{
			        		value:ndny[11],
				        	textStyle:{
					        	fontSize:16,
				        	}
				       	 },
				     ]
			    },
			    yAxis: {
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:ndhdprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:ndxmprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:nddyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:ndymprice,
			        }
			    ]
			};
			myChart2.setOption(option2);
			
		},
		error:function(){
			alert("遍历国内期货连续失败");
		}
	});
}


function getjd(){
	$("#paneljidu").css('display','block');
	$("#panelbannian").css('display','none');
	$("#panelniandu").css('display','none');
}
function getbn(){
	
	$("#paneljidu").css('display','none');
	$("#panelbannian").css('display','block');
	$("#panelniandu").css('display','none');
	
	
}
function getyn(){
	$("#paneljidu").css('display','none');
	$("#panelbannian").css('display','none');
	$("#panelniandu").css('display','block');
	
}

</script>
