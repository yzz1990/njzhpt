				}
			},{
				"render": function (data,type,row,meta) {
					var qtjyc = row["qtjyc"];
					if("合计" == row["name"]){
						qscflx[7] = (qtjyc/1000000).toFixed(4);
					}
					var div = '<div class="">'+(qtjyc/1000000).toFixed(4)+'</div>';	
					return div;					
				}
			}
			]
	});
});	
</script>

<div class="row">
