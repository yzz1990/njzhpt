<%
 layout("/WEB-INF/web/ui/globalStyleDialog.html"){
 var xzqhdm = parameter.xzqhdm;
 
 debug(xzqhdm);
%>
<style>
#gengdi{
	width:420px;
	height:300px;
	margin-left: auto;
    text-align: center;
    margin-right: auto;
}


.quxian-table{
	border:1px solid;
	width:450px;
}
.quxian-table th,td{
	border:1px solid;
	text-align:center;
}
.tudi{
	border:1px solid;
	text-align:right;
}
</style>
<body>
	<div style="text-align:center;">
		<h2 id="biaoti"></h2>
		<input type="text" id="xzqh" style="display:none" value="${xzqhdm}"/>
		<div id="gengdi">
		</div>
		
		<div id="biaoge"  align="center">
			<table class="quxian-table">	 
				<thead>
					<tr>
		    			<th rowspan="1" colspan="1" id="col3" style="vertical-align:middle"></th>
		     			<th id="year1" rowspan="1" colspan="1" id="col4" style="vertical-align:middle"></th>
		     			<th id="year2" rowspan="1" colspan="1" id="col5" style="vertical-align:middle"></th>
		     			<th id="year3" rowspan="1" colspan="1" id="col6" style="vertical-align:middle"></th>
		 			</tr>
				</thead>
				<tbody>
					<tr>
						<td>小麦</td>
						<td class="tudi" id="xiaomai1"></td>
						<td class="tudi" id="xiaomai2"></td>
						<td class="tudi" id="xiaomai3"></td>
					</tr>
					<tr>
						<td>稻谷</td>
						<td class="tudi" id="daogu1"></td>
						<td class="tudi" id="daogu2"></td>
						<td class="tudi" id="daogu3"></td>
					</tr>
				</tbody>	
			</table>
		</div>
		
		
	</div>
</body>

<script type="text/javascript"  src="${ctxPath}/web/echarts.js"></script>

<script type="text/javascript">
$(function(){
	var xzqhdm = $("#xzqh").val();
	$.ajax({
		url:'${ctxPath}/shouchukeshihua/queryquxianmingxi.do',
		type:'post',
		data:{"xzqhdm":xzqhdm,"page":1,"rows":3},
		dataType:'json',
		success:function(data){
			var xmcl = [];
			var dgcl = [];
			var niandu = [];
			$("#biaoti").text(data.list[0].quyu);
			for(var i = 0; i < data.list.length; i++){
				var xiaomai = "xiaomai"+(i+1);
				var daogu = "daogu"+(i+1);
				var year = "year"+(i+1);
				var zcxm = data.list[i].zc_xiaomai != null ? data.list[i].zc_xiaomai : 0;
				var zcdg = data.list[i].zc_daogu != null ? data.list[i].zc_daogu : 0;
				$("#"+xiaomai).text(zcxm);
				$("#"+daogu).text(zcdg);
				$("#"+year).text(data.list[i].niandu+"年度");
				xmcl.push(zcxm);
				dgcl.push(zcdg);
				niandu.push(data.list[i].niandu);
			}
			xmcl.reverse();
			dgcl.reverse();
			niandu.reverse();
			var myChart = echarts.init(document.getElementById('gengdi'));
			
			option = {
				    title: {
				        text: '粮食产量'
				    },
				    tooltip : {
				        trigger: 'axis'
				    },
				    legend: {
			
				        x: 'center',
				        bottom:0,
				        data:['小麦产量','稻谷产量']
				    },
				    toolbox: {
				        feature: {
				            saveAsImage: {}
				        }
				    },
				    grid: {
				        left: '3%',
				        right: '4%',
				        bottom: '10%',
				        containLabel: true
				    },
				    xAxis : [
				        {
				            type : 'category',
				            boundaryGap : false,
				            data : niandu,
				        }
				    ],
				    yAxis : [
				        {
				        	name: '吨',
				            type : 'value'
				        }
				    ],
				    
				    series : [
				        {
				            name:'小麦产量',
				            type:'line',
				            //stack: '总量',
				            data:xmcl,
				            itemStyle:{
				                  normal:{
				                      //opacity:0,
				                      label:{
				                          show:true,
				                          position:'top',
				                          textStyle:{
				                              color:'#3c3c3c'
				                          }
				                      }
				                  }
				              },      
				        },
				        {
				            name:'稻谷产量',
				            type:'line',
				            //stack: '总量',
				            data:dgcl,
				            itemStyle:{
				                  normal:{
				                      //opacity:0,
				                      label:{
				                          show:true,
				                          position:'top',
				                          textStyle:{
				                              color:'#3c3c3c'
				                          }
				                      }
				                  }
				              },      
				        },
				        
				        
				    ]
				};

			myChart.setOption(option);	
			
			
		},
		error:function(){
			alert("加载耕地错误");
		}
		
	});
});

</script>
<%
	}
%>