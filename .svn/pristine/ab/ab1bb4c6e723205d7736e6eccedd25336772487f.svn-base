function delqiyexx(ID,qyzzjgdm){
	if(confirm("确认删除?")){
		$.ajax({
			url:'${ctxPath}/jibenxinxi/delQiyexinxi',
			type:'post',
			data:{'ID':ID,'qyzzjgdm':qyzzjgdm},
			dataType:'json',
			success:function(data){
				if(data){
					alert("删除成功");
					datatable.ajax.reload(null,false);
				}else{
					alert("删除失败");
				}
				
			},
			error:function(){
				alert("error");
			}
			
		});
	}
}


