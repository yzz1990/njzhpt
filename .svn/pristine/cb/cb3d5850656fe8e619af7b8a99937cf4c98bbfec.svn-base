<%
 layout("/WEB-INF/web/ui/globalStyle.html"){
%>
<style type="text/css">
	.table-striped>thead>tr>th{
		text-align: center;
	}
	.table-striped>tbody>tr {
		font-family: '微软雅黑'
	}
	.table-striped>tbody>tr>td{
		text-align: center;
	}
	
	.table-striped>tbody>tr>td:nth-child(8){
		width: 140px;
	}
</style>
<div class="panel panel-default">
		<div style="border: 1px solid  #ADD8E6;width:100%;background-color: #E8F2F9;border-radius: 3px;" align="left">
			<img alt="" src="${ctxPath}/img/titleico.png" style="padding: 5px;position: absolute;">
			<span style="height:50px;font-size:20px;color: black;padding: 0px;margin-left: 25px;"><b>药剂备案</b></span>
		</div>
			<div class="panel-heading">
				<div class="form-inline" style="float: left">
					<label>区域:</label>
					<select id="quyu" class="form-control input-sm selects" style="width:150px; font-size:14px" onchange="Change()">
						<option value="" selected="true" >请选择区域</option>
					</select>
					<label style="margin-left: 20px">企业名称:</label>
					<select id="qymc" class="form-control input-sm selects" style="width:200px;font-size:14px">
						<option value="" selected="true" >请选择企业名称</option>
					</select>
					<label style="margin-left: 20px">备案编号:</label>
					<input class="form-control input-sm" name="beianbianhao" id="beianbianhao" placeholder="备案编号" onkeypress="javascript:if(event.keyCode == 32)event.returnValue = false;" type="text" style="width:150px;font-size:14px">	
					<a class="btn btn-success btn-xs" type="button" onclick="doSearch()"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;查询</a>
				</div>
				<a class="btn btn-success btn-xs pull-right" type="button" onclick="addXZ()"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;新增</a>
				<div class="clearfix"></div>
			</div>
			<div class="panel-body">
					<table  class="table table-striped table-hover table-bordered datatables" data-url="${ctxPath}/renyuan/findYaoji" ></table>
			</div>
		</div>


<script type="text/javascript">
$(document).ready(function() {
	  $(".selects").select2();
});
var datatable;
$(function(){
	/* 加载区县 */
	$.ajax({
		 url:'${ctxPath}/shouchukeshihua/findquxian',
		 type:'post',
		 dataType:'json',
		
		 success:function(data){
			$.each(data,function(i, n){
				$("#quyu").append("<option value="+n.xzqhdm+">"+n.name+"</option>");
			});
		 }
	});
	datatable = $('.datatables').DataTable({
        "columns": [
			{
				"data" : "quyu",widch:40,
				"title" : "区域"
			},{
				"data" : "beianbianhao",widch:40,
				"title" : "备案编号"
			},
			{
				"data" : "qymc",widch:120,
				"title" : "企业名称"
			},{
				"data" : "cfkudian",
				"title" : "药剂库点"
			},{
				"data" : "shuliang",
				"title" : "药剂数量(kg)"
			},{
				"data" : "fuzeren",
				"title" : "药剂负责人"
			},{
				"data" : "status",
				"title" : "状态",
				"render":function(data,type,row,meta){
					var result="";
					
					if(row["jiedian"]==undefined||parseInt(data)<=parseInt(row["jiedian"])){
						result='<a class="label label-success">待审核</a>';
					}else if(parseInt(data)==parseInt(row["jiedian"])){
						result='<a class="label label-warning">'+row["depname"]+'待审核</a>';
					}else if(parseInt(data.substring(1,2))==0){
						result='<a class="label label-danger">'+row["depname"]+'审核不通过</a>';
					}else{
						result='<a class="label label-success">'+row["depname"]+'审核通过</a>';
					}
  					return  result;
				}
			},
			 {"title":"操作",widch:120,
            	"render": function (data,type,row,meta) {
            		var url = 'javascript:void(0)';
                   	var bianji = '<a href='+url+' onclick="upxzba(\''+row["id"]+'\')" class="btn btn-xs btn-success"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;编辑</a>';
                   	var shanchu = '<button type="button" class="btn btn-xs btn-danger" onclick="delxzba(\''+row["id"]+'\')"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;删除</button>';
               		return bianji + " " + shanchu;
            	}
            }
			]
	});
});

	
function doSearch(){
	var beianbianhao = $("#beianbianhao").val();
	var qymc = $("#qymc").val();
	var quyu = $("#quyu").val();
	document.querySelector('.datatables').dataset.queryparam="&quyu="+quyu+"&qymc="+qymc+"&beianbianhao="+beianbianhao;
	datatable.ajax.reload(null,false);
}
	

function Change(){
	$("#qymc").html("");
	var xian = $("#quyu option:selected").text().trim();
	var op = '<option value="">请选择企业名称</option>';
    $("#qymc").append(op);
	
    $.ajax({
		url:'${ctxPath}/cangchugl/findqiyemc',
		type:'post',
		data:{"xian":xian},
		dataType:'json',
		success:function(data){
			for(var i = 0; i < data.length; i++){
				 var op = "<option value="+data[i].qyzzjgdm+">"+data[i].qymc+"</option>";
			     $("#qymc").append(op);
			}
		},
		error:function(){
			alert("error");
		}
		
		
	});
}

var dialog1;
function addXZ(){
	dialog1=BootstrapDialog.show({
	    title: '新增药剂备案',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="no" src="${ctxPath}/oa/yaojibeian/yaojibeian_add.html"/>'),
	    onshow:function(dlg){
	       	dlg.$modalDialog.css("width","900px");//modal-dialog
	       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","560px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.savexzba(); 
           },
          cssClass: 'btn-success btn-xs'
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger btn-xs'
       }]
	});
}


function delxzba(id){
	if(confirm("确认删除?")){
		$.ajax({
			url:'${ctxPath}/renyuan/delyjba',
			type:'post',
			data:{'id':id},
			dataType:'json',
			success:function(data){
				if(data){
					alert("删除成功");
					datatable.ajax.reload(null,false);
				}else{
					alert("删除失败");
				}
			}
		});
	}
}


function upxzba(id){
	dialog1=BootstrapDialog.show({
	    title: '编辑药剂备案',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="no" src="${ctxPath}/renyuan/yaojibeianEdit?id='+id+'"/>'),
	    onshow:function(dlg){
	       	dlg.$modalDialog.css("width","900px");//modal-dialog
	       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","560px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.savexzba(); 
       	  
           },
          cssClass: 'btn-success btn-xs'
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger btn-xs'
       }]
	});
}

	
</script>
<%
	}
%>