$('.datatables').on( 'draw.dt', function () {
	Changexz();
} );

function Changexz(){
	$.ajax({
		url:'${ctxPath}/cangchugl/findlsxz',
		type:'post',
		dataType:'json',
		success:function(data){
			for(var i = 0; i < data.length; i++){
				 var op = '<option value="'+data[i].vCode+'">'+data[i].vGrainProperties+'</option>';
			     $("#lsxz").append(op);
			}
		},
		error:function(){
			alert("error");
		}
	});
}

</script>
