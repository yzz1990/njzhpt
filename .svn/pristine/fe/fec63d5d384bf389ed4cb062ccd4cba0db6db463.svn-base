function doSearch(){
	var niandu = $(".input-sm option:selected").val();
	var queryparam = "&jidu=夏季";
	if(niandu != "请选择"){
		queryparam += "&niandu="+niandu;
	}
	$(".datatables").attr("data-queryparam",queryparam);
	datatable.ajax.reload(null,true);
}


</script>
