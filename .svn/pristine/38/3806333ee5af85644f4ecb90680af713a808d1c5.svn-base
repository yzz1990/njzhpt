			if(confirm("是否保存新的采价点"+cjdname)){
			    $.ajax({
			    	url:'${ctxPath}/jiage/savecjd',
			    	type:'post',
			    	data:form.serialize(),
			    	dataType:'json',
			    	success:function(msg){	
			    		if (!msg.ret) {
							alert(msg.message);
						} else {
							alert("保存成功");
						}
			    		gettree();
			    	},
			    	error:function(){
			    		alert("保存采价点失败");
			    	}
			    });
			 }
		}
