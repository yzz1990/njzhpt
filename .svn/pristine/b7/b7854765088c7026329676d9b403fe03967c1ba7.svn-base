function saveKuCun() {
	if($("#xzqhdm").val()==""){
		alert("请选择区域名称!");
		return false;
	}else if($("#qyzzjgdm").val()==""){
		alert("请选择企业名称!")
		return false;
	}else if($("#kdbm").val()==""){
		alert("请选择库点名称!")
		return false;
	}
	var cfstr="";
	var pzstr="";
	var xzstr="";
	var ndstr="";
	var djstr="";
	var rksjstr="";
	var slstr="";
	for(var i=1;i<=index;i++){
		if($("#cf"+i).length>0){
			if(""==$("#cf"+i).val()){
				alert("请选择仓廒名称！");
				return false;
			}
			cfstr+=$("#cf"+i).val()+",";
			if(""==$("#pz"+i).val()){
				alert("请选择品种名称！");
				return false;
			}
			pzstr+=$("#pz"+i).val()+",";
			if(""==$("#xz"+i).val()){
				alert("请选择粮食性质！");
				return false;
			}
			xzstr+=$("#xz"+i).val()+",";
			if(""==$("#nd"+i).val()){
				alert("请选择收获年度！");
				return false;
			}
			ndstr+=$("#nd"+i).val()+",";
			if(""==$("#dj"+i).val()){
				alert("请选择粮食等级！");
				return false;
			}
			djstr+=$("#dj"+i).val()+",";
			if(""==$("#rksj"+i).val()){
				alert("请选择入库时间！");
				return false;
			}
			rksjstr+=$("#rksj"+i).val()+",";
			if(""==$("#sl"+i).val()){
				alert("请输入库存数量！");
				return false;
			}
			slstr+=$("#sl"+i).val()+",";
		}
		
	}
	$("#cfstr").val(cfstr);
	$("#pzstr").val(pzstr);
	$("#xzstr").val(xzstr);
	$("#ndstr").val(ndstr);
	$("#djstr").val(djstr);
	$("#rksjstr").val(rksjstr);
	$("#slstr").val(slstr);
	 var form = $(".widget-body form");
	$.ajax({
		url: "${ctxPath}/zhiliangGL/xzkucun",
		dataType: "json",
		data: form.serialize(),
		success: function(msg) {
			if (!msg.ret) {
				alert(msg.msg);
			} else {
				alert("保存成功");
				parent.window.dialog.close();
				parent.window.datatable.ajax.reload(null,true);
			}
		}
	}); 
}
</script>
</body>
</html>