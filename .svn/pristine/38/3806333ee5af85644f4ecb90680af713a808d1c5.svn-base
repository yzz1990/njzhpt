function saveCjd(){
	$("#ssqycode").removeAttr("disabled");
	//新增采价点
	if(flag == 2){
		var form = $(".dashboard-wrapper-lg form");
		var cjdmc = $("#cjdcode option:selected").text().trim();
		if(confirm("是否保存新的采价点"+cjdmc)){
		    $.ajax({
		    	url:'${ctxPath}/jiage/savecjd',
		    	type:'post',
		    	data:form.serialize(),
		    	dataType:'json',
		    	success:function(msg){	
		    		if (!msg.ret) {
						alert(msg.message);
					} else {
						alert("保存成功");
					}
		    		gettree();
		    	},
		    	error:function(){
		    		alert("保存采价点失败");
		    	}
		    });
		 }
	}
	
	//修改当前采价点
	if(flag == 1){
		var form = $(".dashboard-wrapper-lg form");
		var cjdmc = $("#cjdcode option:selected").text().trim();
		$("#cjdcode").removeAttr("disabled");
		$("#ssqycode").removeAttr("disabled");
		if(confirm("是否修改采价点"+cjdmc)){
			
		    $.ajax({
		    	url:'${ctxPath}/jiage/updatecjd',
		    	type:'post',
		    	data:form.serialize(),
		    	dataType:'json',
		    	success:function(msg){	
		    		if (!msg.ret) {
						alert(msg.message);
					} else {
						alert("修改成功");
					}
		    		gettree();
		    	},
		    	error:function(){
		    		alert("修改采价点失败");
		    	}
		    });
		 }
		
	}
}

