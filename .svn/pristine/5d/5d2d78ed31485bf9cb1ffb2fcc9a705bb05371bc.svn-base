} */


$('.datatables').on( 'draw.dt', function () {
	Change();
	var xian = $("#quyu option:selected").text().trim();
} );

function Change(){
	$("#qymc").html("");
	var xian = $("#quyu option:selected").text().trim();
	var op = '<option value="">请选择企业名称</option>';
    $("#qymc").append(op);
	
    $.ajax({
		url:'${ctxPath}/cangchugl/findqiyemc',
		type:'post',
		data:{"xian":xian},
		dataType:'json',
		success:function(data){
			for(var i = 0; i < data.length; i++){
				 var op = "<option value="+data[i].qymc+">"+data[i].qymc+"</option>";
			     $("#qymc").append(op);
			}
		},
		error:function(){
			alert("error");
		}
		
		
	});
}



function addqiba(){
	dialog1=BootstrapDialog.show({
	    title: '新增企业备案',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="no" src="${ctxPath}/oa/cangchuguanli_zsg/qiyebeian/qiyebeian_zsg.html"/>'),
	    onshow:function(dlg){
       	dlg.$modalDialog.css("width","900px");//modal-dialog
       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","520px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.saveqyba(); 
        	   parent.window.dialog1.close();
        	   parent.window.datatable.ajax.reload(null,true);
           },
          cssClass: 'btn-primary'
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger'
       }]
	});
}


function delqyba(id){
	if(confirm("确认删除?")){
		$.ajax({
			url:'${ctxPath}/cangchugl/delQiyebeian',
			type:'post',
			data:{'id':id},
			dataType:'json',
			success:function(data){
				if(data){
					alert("删除成功");
					datatable.ajax.reload(null,false);
				}else{
					alert("删除失败");
				}
				
			},
			error:function(){
				alert("error");
			}
			
		});
	}
}


function upqyba(id){
	dialog1=BootstrapDialog.show({
	    title: '编辑企业备案',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="no" src="${ctxPath}/oa/cangchuguanli_zsg/qiyebeian/qiyebeian_zsg.html?id='+id+'"/>'),
	    onshow:function(dlg){
       	dlg.$modalDialog.css("width","900px");//modal-dialog
       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","520px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.saveqyba(); 
        	   parent.window.dialog1.close();
        	   parent.window.datatable.ajax.reload(null,true);
           },
          cssClass: 'btn-primary'
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger'
       }]
	});
}

	
</script>
