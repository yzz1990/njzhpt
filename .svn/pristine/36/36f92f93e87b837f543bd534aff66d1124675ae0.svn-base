<script type="text/javascript">

$(document).ready(function() {
	  $(".js-example-basic-single").select2();
	});

$(function(){
    $('#qssj').datetimepicker({
        minView: "month",
        format:'yyyy-mm-dd',
        language: 'zh-CN',
        autoclose: 1,
        startView: 2,
    });
    //form_datetimebegin
    $('.form_datetimebegin').datetimepicker({
        minView: "month",
        format:'yyyy-mm-dd',
        language: 'zh-CN',
        autoclose: 1,
        startView: 2,
        // pickerPosition:bottom-right
    }).on('changeDate', function (ev) {
        $(this).datetimepicker('hide');
    });
    $('.form_datetimeend').datetimepicker({
        minView: "month",
        format:'yyyy-mm-dd',
        language: 'zh-CN',
        autoclose: 1,
        startView: 2,
        // pickerPosition:bottom-right
    }).on('changeDate', function (ev) {
        $(this).datetimepicker('hide');
    });
    $(".form_datetimebegin").datetimepicker({format: 'yyyy-mm-dd'});
    $(".form_datetimeend").datetimepicker({format: 'yyyy-mm-dd'});
});

var datatable;
$(function(){
	datatable = $('.datatables').DataTable({
        "columns": [
			{
				"data" : "cangming",
				"title" : "仓名"
			},{
				"data" : "yangqi",
				"title" : "氧气"
			},{
				"data" : "eryanghuatan",
				"title" : "二氧化碳"
			},{
				"data" : "linhuaqin",
				"title" : "磷化氢"
			},{
				"data" : "shijian",
				"title" : "更新时间",
			}
			]
	});
});

	
function doSearch(){
	var ch = $("#ch").val();
	var pz = $("#lslb").val();
	var lstj = $("#lstj").val();
    var time = $(".form_datetimebegin").val();
    var endtime = $(".form_datetimeend").val();
    if(""!=time&&""!=endtime){
	    if(time>endtime){
	        alert("起始时间不能大于终止时间!");
	        return false;
	    }
    }
	document.querySelector('.datatables').dataset.queryparam="&ch="+ch+"&pz="+pz+"&lstj="+lstj+"&time="+time+"&endtime="+endtime;
	datatable.ajax.reload(null,false);
}

$(document).ready(function() {
	  $(".js-example-basic-single").select2();
	});


</script>
