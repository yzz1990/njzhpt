    function getzp(){
        var quyu = $("#quyu").val();
        var qymc = $("#qiyeId").val();
        var sshy = $("#suoshuhangye").val();
        var zy = $("#zhuanye").val();
        var tishi = "";
        if(quyu == null || quyu == "" || quyu == "请选择"){
            tishi += "请选择行政区划 ";
        }
        if(qymc == null || qymc == "" || qymc == "请选择"){
            tishi += "请选择企业 ";
        }
        if (sshy == null || sshy == "") {
            tishi += "请填写所属行业";
		}
		if(zy == null || zy == "") {
			tishi += "请填写专业";
		}
        if(tishi != ""){
            $("#zhuanye").val("");
            alert(tishi);
        }else{
			$("#qyzp").toggle();
		}

    }



