function shanchu(id){
	if (confirm("是否删除此条信息？")) {
	$.ajax({
		url: "${ctxPath}/lunhuan/LunHuanSQSC.do",
		dataType: "json",
		data:{"id":id},
		success: function(msg) {
			if (msg.bool) {
				alert("轮换申请删除成功");
				datatable.ajax.reload(null,false);
			}else{
				alert(msg.msg);
			}
		}
	});
	}
}
function daitijiao(id){
	if (confirm("是否提交此条信息？")) {
		$.ajax({
				url: "${ctxPath}/lunhuan/LunHuanSQTJ.do",
				dataType: "json",
				data:{"id":id},
				success: function(msg) {
					if (msg.ret) {
						alert("轮换申请提交成功");
						datatable.ajax.reload(null,false);
					}else{
						alert(msg.message);
					}
				}
			});
	}
}
