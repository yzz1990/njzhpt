	    onshow:function(dlg){
       	dlg.$modalDialog.css("width","900");//modal-dialog
       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","550px");//modal-dialog
       },
       buttons: [{
           label: '关闭',
           action: function(dialog) {
