<%
 layout("/WEB-INF/web/ui/globalStyle.html"){
%>
<style type="text/css">
	.table-striped>thead>tr>th{
		text-align: center;
	}
	.table-striped>tbody>tr {
		font-family: '微软雅黑'
	}
	.table-striped>tbody>tr>td{
		text-align: center;
	}
	.table-striped>tbody>tr>td:nth-child(11){
		width: 120px;
	}
	.table-striped>tbody>tr>td:nth-child(5){
		text-align: left;
	}
</style>
<div class="panel panel-default">
		<div style="border: 1px solid  #ADD8E6;width:100%;background-color: #E8F2F9;border-radius: 3px;" align="left">
				<img alt="" src="${ctxPath}/img/titleico.png" style="padding: 5px;position: absolute;">
				<span style="height:50px;font-size:20px;color: black;padding: 0px;margin-left: 25px;"><b>药剂出库</b></span>
		</div>
			<div class="panel-heading">
				<div class="form-inline" style="float: left;">
					<label>领药企业:</label>
					<select id="lingyaoqy" class="js-example-basic-single input-sm" style="width:200px;font-size:14px" >
						<option value="" selected="true" >全部企业</option>
					</select>
					<label>熏蒸备案号:</label>
					<input id="xunzhenbeianhao" class="form-control" >
					<a class="btn btn-success btn-xs" type="button" onclick="doSearch()"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;查询</a>
				</div>
				<a class="btn btn-success btn-xs pull-right" type="button" id="yjsq" onclick="addYjck()"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;药剂申请</a>
				<div class="clearfix"></div>
			</div>
			<div class="panel-body">
					<table  class="table table-striped table-hover table-bordered datatables" data-url="${ctxPath}/cangchugl/findYjck?isedit=2" ></table>
			</div>
		</div>
<script type="text/javascript">

var datatable;
$(function(){
	if("${array.contain(session.userinfo.auth,'auth_company')}"=="false"){
		$("#yjsq").css("display","none");
	}
	$("#lingyaoqy").select2();
	 $.ajax({
			url: "${ctxPath}/lunhuan/selectQYMC.do",
			dataType: "json",
			data:{"name":"${array.contain(session.userinfo.auth,'auth_select_part')?session.userinfo.area.name:''}"
				,"qymc":"${array.contain(session.userinfo.auth,'auth_company')?session.userinfo.dep.name:''}"},
			success: function(data) {
				$.each(data.list,function(i, n){
						$("#lingyaoqy").append("<option value="+n.id+">"+n.qymc+"</option>");
				});
			}
		});
	$.ajax({
		 url:'${ctxPath}/shouchukeshihua/findquxian',
		 type:'post',
		 dataType:'json',
		 data:{"name":"${array.contain(session.userinfo.auth,'auth_select_part')?session.userinfo.area.name:''}"},
		 success:function(data){
			 $.each(data,function(i, n){
					$("#shiqu").append("<option value="+n.xzqhdm+">"+n.name+"</option>");
				});
		 },
		 error:function(){
			 alert("error");
		 }
	  });
	$.ajax({
		url:'${ctxPath}/cangchugl/findyaoku',
		type:'post',
		dataType:'json',
		success:function(data){
			for(var i = 0; i < data.length; i++){
				 var op = '<option value='+data[i].kdbm+'>'+data[i].cfkudian+'</option>';
			     $("#cfkudian").append(op);
			}
		},
		error:function(){
			alert("error");
		}		
	});
	datatable = $('.datatables').DataTable({
		"columns": [
			{
				"data":"xuhao",width:40,
				"title":"序号"
			},
			{
				"data" : "xzbah",width:120,
				"title" : "熏蒸备案编号"
			},{
				"data" : "weight",width:50,
				"title" : "重量(kg)",
				"render": function (data,type,row,meta) {
					var result=row["weight"]/1000;
	             	return result.toFixed(2);
	           	}
			},{
				"data" : "qymc",width:190,
				"title" : "领用企业",
			},{
				"data" : "lyrq",width:120,
				"title" : "领药日期",
			},{
				"data" : "lqr",width:60,
				"title" : "领取人",
			},{
				"data" : "status",width:60,
				"title" : "状态",
				"render":function(data,type,row,meta){
	   				 var result;
	   				 if(data==0){
	   					result='<a class="label label-success">审核通过</a>';
	   				 }else if(data==1){
	   					result='<a class="label label-success">待审核</a>';
	   				 }else if(data==10){
	   					result='<a class="label label-danger">审批不通过</a>';
	   				 }
	   				 return result;
				}
			},
			  { "title":"操作",width:220,
            	"render": function (data,type,row,meta) {
            		var url = 'javascript:void(0)';
            		var liyou = '<button type="button" onclick="chakanliyou(\''+row["id"]+'\')" style="" class="btn btn-xs btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;查看驳回理由</button>';
                   	var liyou1 = '<button type="button" onclick="chakanliyou(\''+row["id"]+'\')" disabled="disabled" style="" class="btn btn-xs btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;查看驳回理由</button>';
            		var bianji1 = '<a href='+url+' onclick="upyjck(\''+row["id"]+'\')" class="btn btn-xs btn-success" ><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;查看</a>';
                	var bianji = '<a href='+url+' onclick="upYjck(\''+row["id"]+'\')" class="btn btn-xs btn-success"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;编辑</a>';
                   	var shanchu = '<button type="button" class="btn btn-xs btn-danger" onclick="delYjck(\''+row["id"]+'\')"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;删除</button>';
                	var shanchu1 = '<button type="button" class="btn btn-xs btn-danger" disabled="disabled"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;删除</button>';
					if("${array.contain(session.userinfo.auth,'auth_manager')}"=="true"||"${array.contain(session.userinfo.auth,'auth_county')}"=="true"||"${array.contain(session.userinfo.auth,'auth_ykgly')}"=="true"){
						return bianji1 + " " + shanchu1;
					}else{
						if(row["status"]==0){
	                   		return bianji1 + " "+liyou1+ " "+ shanchu;
		   				 }else if(row["status"]==10){
		   					return bianji + " " +liyou+ " "+ shanchu; 
		               	}else{
		   					return bianji + " " +liyou1+ " "+ shanchu; 
		   				 }	
					}		                	
            	}
	          }
			]
	});
});

	
function doSearch(){
	var id = $("#lingyaoqy").val();
	var beianhao=$("#xunzhenbeianhao").val();
	document.querySelector('.datatables').dataset.queryparam="&qyid="+id+"&xzbah="+beianhao;
	datatable.ajax.reload(null,true);
}

$(document).ready(function() {
	  $("#shiqu").select2();
});

$(document).ready(function() {
	  $("#cfkudian").select2();
});


function addYjck(){
	dialog1=BootstrapDialog.show({
	    title: '新增药剂申请',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0"  src="${ctxPath}/oa/cangchuguanli_zsg/yaojiguanli/yaojichuku_zsg.html"/>'),
	    onshow:function(dlg){
       	dlg.$modalDialog.css("width","900px");//modal-dialog
       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","520px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.saveYjck(); 
        	   //parent.window.dialog1.close();
        	   parent.window.datatable.ajax.reload(null,true);
           },
          cssClass: 'btn-success btn-xs '
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger btn-xs'
       }]
	});
}
var  viewDialog;
function chakanliyou(id){
	viewDialog=top.BootstrapDialog.show({
			    title: '查看驳回理由',
				closeByBackdrop: true,
			    message:$('<iframe frameborderno="0" id="iframe1" name="iframe1"  style="width:100%;height:100%;" frameborder="0" scrolling="no" src="${ctxPath}/renyuan/bohuiyaojishenpi?id='+id+'&page=1&rows=1000"/>'),
			    onshow:function(dlg){
		       		dlg.$modalDialog.css("width","500px");//modal-dialog
		       		$(".bootstrap-dialog-message", dlg.$modalContent).css("height","300px");//modal-dialog
		       	},
		      	buttons: [{
		           label: '取消',
		           action: function(dialog) {
		               dialog.close();
		           },
		          cssClass: 'btn-danger btn-xs'
		       }]
			});
}
function upyjck(id){
	dialog1=BootstrapDialog.show({
	    title: '查看药剂出库信息',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0"  src="${ctxPath}/oa/cangchuguanli_zsg/yaojiguanli/yaojichuku_bianji.html?id='+id+'"/>'),
	    onshow:function(dlg){
       	dlg.$modalDialog.css("width","800px");//modal-dialog
       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","520px");//modal-dialog
       },
       buttons: [{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger btn-xs'
       }]
	});
}
function upYjck(id){
	dialog1=BootstrapDialog.show({
	    title: '编辑药剂出库信息',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0"  src="${ctxPath}/oa/cangchuguanli_zsg/yaojiguanli/yaojichuku_bianji.html?id='+id+'"/>'),
	    onshow:function(dlg){
       	dlg.$modalDialog.css("width","900px");//modal-dialog
       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","520px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.saveYjck(); 
        	   //parent.window.dialog1.close();
        	   parent.window.datatable.ajax.reload(null,true);
           },
          cssClass: 'btn-success btn-xs '
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger btn-xs'
       }]
	});
}

function delYjck(id){
	if(confirm("确认删除?")){
		$.ajax({
			url:'${ctxPath}/cangchugl/delYjck',
			type:'post',
			data:{'id':id},
			dataType:'json',
			success:function(data){
				if(data){
					alert("删除成功");
					datatable.ajax.reload(null,false);
				}else{
					alert("删除失败");
				}
				
			},
			error:function(){
				alert("error");
			}
			
		});
	}
}


</script>
<%
	}
%>