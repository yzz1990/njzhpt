var oldTime = 0;

function doSearch(){
	var nowTime = new Date().getTime();
    if( nowTime != 'undefined' && (nowTime - oldTime > 500)){
   	 	xian = $(".input-smdq option:selected").val();
   		qyzzjgdm = $(".input-smqy option:selected").val();
   		kdmc = $(".input-smkdmc option:selected").val();
		
		$(".zongcangrong").text(0.000);
		$(".zongkucun").text(0.000);
		$(".xiaomai").text(0.000);
		$(".jingdao").text(0.000);
		$(".xiandao").text(0.000);
   		
   		$(".datatables").attr("data-queryparam","&xian="+xian+"&qyzzjgdm="+qyzzjgdm+"&kdmc="+kdmc+"&isksh="+isksh);
   		datatable.ajax.reload(null,true);
    }       
    oldTime = nowTime;
}

