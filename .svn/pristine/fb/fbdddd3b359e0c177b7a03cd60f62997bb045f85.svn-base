<%
 layout("/WEB-INF/web/ui/globalStyle.html"){
%>
<style type="text/css">
	.table-striped>thead>tr>th{
		text-align: center;
	}
	.table-striped>tbody>tr {
		font-family: '微软雅黑'
	}
	.table-striped>tbody>tr>td{
		text-align: center;
	}
	.table-striped>tbody>tr>td:nth-child(3){
		text-align: left;
	}
	.table-striped>tbody>tr>td:nth-child(8){
		width: 120px;
	}

</style>
<div class="panel panel-default">
		<div style="border: 1px solid  #ADD8E6;width:100%;background-color: #E8F2F9;border-radius: 3px;" align="left">
			<img alt="" src="${ctxPath}/img/titleico.png" style="padding: 5px;position: absolute;">
			<span style="height:50px;font-size:20px;color: black;padding: 0px;margin-left: 25px;"><b>熏蒸备案</b></span>
		</div>
			<div class="panel-heading">
				<div class="form-inline" style="float: left">
					<div style="float: left;" id="qy">
					<label>区域:</label>
					<select id="quyu" class="form-control input-sm selects" style="width:150px; font-size:14px" onchange="Change()">
						<option value="" selected="true" >全部区域</option>
					</select>
				</div>	
				<div style="float: left;" id="qqy">
					<label style="margin-left: 20px">企业名称:</label>
					<select id="qymc" class="form-control input-sm selects" style="width:200px;font-size:14px">
						<option value="" selected="true" >全部企业</option>
					</select>
				</div>
				<div style="float: left;">	
					<label style="margin-left: 20px">备案编号:</label>
					<input class="form-control input-sm" name="beianbianhao" id="beianbianhao" placeholder="备案编号" onkeypress="javascript:if(event.keyCode == 32)event.returnValue = false;" type="text" style="width:150px;font-size:14px">	
					<a class="btn btn-success btn-xs" type="button" onclick="doSearch()"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;查询</a>
				</div>
				</div>
				<a class="btn btn-success btn-xs pull-right" type="button" onclick="addXZ()"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;新增</a>
				<div class="clearfix"></div>
			</div>
			<div class="panel-body">
					<table  class="table table-striped table-hover table-bordered datatables" data-url="${ctxPath}/renyuan/findXunzheng?isedit=2" ></table>
			</div>
		</div>


<script type="text/javascript">
$(document).ready(function() {
	  $(".selects").select2();
});
var datatable;
$(function(){
	/* 加载区县 */
	$.ajax({
		 url:'${ctxPath}/shouchukeshihua/findquxian',
		 type:'post',
		 dataType:'json',
		 data:{"name":"${array.contain(session.userinfo.auth,'auth_select_part')?session.userinfo.area.name:''}"},
		 success:function(data){
			$.each(data,function(i, n){
				$("#quyu").append("<option value="+n.xzqhdm+">"+n.name+"</option>");
			});
		 }
	});
	$.ajax({
		url:'${ctxPath}/lunhuan/selectQYMC.do',
		type:'post',
		data:{"name":"${array.contain(session.userinfo.auth,'auth_select_part')?session.userinfo.area.name:''}"
			,"qymc":"${array.contain(session.userinfo.auth,'auth_company')?session.userinfo.dep.name:''}"},
		dataType:'json',
		success: function(data) {
			$.each(data.list,function(i, n){
					$("#qymc").append("<option value="+n.qyzzjgdm+">"+n.qymc+"</option>");
			});
		},
		error:function(){
			alert("error");
		}
		
		
	});
	datatable = $('.datatables').DataTable({
        "columns": [
			{
				"data" : "quyu",width:60,
				"title" : "区域"
			},{
				"data" : "beianbianhao",width:70,
				"title" : "备案编号"
			},
			{
				"data" : "qymc",width:190,
				"title" : "企业名称"
			},{
				"data" : "sqrq",width:85,
				"title" : "申请日期"
			},{
				"data" : "fuzeren",width:85,
				"title" : "熏蒸负责人"
			},{
				"data" : "yingjiyuan",width:100,
				"title" : "应急预案"
			},{
				"data" : "status",width:150,
				"title" : "状态",
				"render":function(data,type,row,meta){
					var result="";
					
					if(row["jiedian"]==undefined||parseInt(data)<=parseInt(row["jiedian"])){
						result='<a class="label label-success">待审核</a>';
					}else if(parseInt(data.substring(1,2))==0){
						result='<a class="label label-danger">'+row["depname"]+'审核不通过</a>';
					}else{
						if(parseInt(row["jiedian"])==parseInt(row["jd"])){
							result='<a class="label label-success">'+row["depname"]+'审核通过</a>';
						}else{
							result='<a class="label label-success">'+row["depname"]+'正在审核</a>';
						}
					}
  					return  result;
				}
			},
			 {"title":"操作",width:220,
            	"render": function (data,type,row,meta) {
            		var url = 'javascript:void(0)';
            		var liyou = '<button type="button" onclick="chakanliyou(\''+row["id"]+'\')" style="" class="btn btn-xs btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;查看驳回理由</button>';
            		var liyou1 = '<button type="button" onclick="chakanliyou(\''+row["id"]+'\')" disabled="disabled" style="" class="btn btn-xs btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;查看驳回理由</button>';
            		var bianji = '<a href='+url+' onclick="upxzba(\''+row["id"]+'\')" class="btn btn-xs btn-success"><i class="fa fa-pencil" aria-hidden="true"></i>&nbsp;编辑</a>';
                   	var shanchu = '<button type="button" class="btn btn-xs btn-danger" onclick="delxzba(\''+row["id"]+'\')"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;删除</button>';
                   	var shanchu1 = '<button type="button" class="btn btn-xs btn-danger" disabled="disabled"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;删除</button>';
                   	if(row["status"].substring(0,1)==row["jiedian"]&&row["status"].substring(1,2)==0){
               			return liyou+" "+bianji+" "+shanchu;
               		}else if(row["jiedian"]==undefined||parseInt(data)<=parseInt(row["jiedian"])){
               			return liyou1+" "+bianji + " " + shanchu;	
               		}else{
               			return liyou1+" "+bianji + " " + shanchu1;	
               		}
            	}
            }
			]
	});
});

function doSearch(){
	var beianbianhao = $("#beianbianhao").val();
	var qymc = $("#qymc").val();
	var quyu = $("#quyu").val();
	document.querySelector('.datatables').dataset.queryparam="&quyu="+quyu+"&qymc="+qymc+"&beianbianhao="+beianbianhao;
	datatable.ajax.reload(null,false);
}
	

function Change(){
	$("#qymc").html("");
	var xian = $("#quyu option:selected").val().trim();
	var op = '<option value="">全部企业</option>';
    $("#qymc").append(op);
	
    $.ajax({
		url:'${ctxPath}/lunhuan/selectQYMC.do',
		type:'post',
		data:{"xzqhdm":xian,"name":"${array.contain(session.userinfo.auth,'auth_select_part')?session.userinfo.area.name:''}"
			,"qymc":"${array.contain(session.userinfo.auth,'auth_company')?session.userinfo.dep.name:''}"},
		dataType:'json',
		success: function(data) {
			$.each(data.list,function(i, n){
					$("#qymc").append("<option value="+n.qyzzjgdm+">"+n.qymc+"</option>");
			});
			$("#qqy").find(".select2-selection__rendered").text("全部企业");
			$("#qqy").find(".select2-selection__rendered").attr("title","全部企业");
		},
		error:function(){
			alert("error");
		}
		
		
	});
}

var dialog1;
function addXZ(){
	dialog1=BootstrapDialog.show({
	    title: '新增熏蒸备案',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="yes" src="${ctxPath}/oa/xunzhengbeian/xunzhengbeian_add.html"/>'),
	    onshow:function(dlg){
	       	dlg.$modalDialog.css("width","950px");//modal-dialog
	       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","560px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.savexzba(); 
           },
          cssClass: 'btn-success btn-xs'
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger btn-xs'
       }]
	});
}


function delxzba(id){
	if(confirm("确认删除?")){
		$.ajax({
			url:'${ctxPath}/renyuan/delxzba',
			type:'post',
			data:{'id':id},
			dataType:'json',
			success:function(data){
				if(data){
					alert("删除成功");
					datatable.ajax.reload(null,false);
				}else{
					alert("删除失败");
				}
			}
		});
	}
}


function upxzba(id){
	dialog1=BootstrapDialog.show({
	    title: '编辑熏蒸备案',
		closeByBackdrop: true,
	    message:$('<iframe frameborderno="0"  style="width:100%;height:100%;" frameborder="0" scrolling="yes" src="${ctxPath}/renyuan/XunzhengbeianEdit?id='+id+'"/>'),
	    onshow:function(dlg){
	       	dlg.$modalDialog.css("width","950px");//modal-dialog
	       	$(".bootstrap-dialog-message", dlg.$modalContent).css("height","560px");//modal-dialog
       },
       buttons: [{
           label: '保存',
           action: function(dialog) {
        	   $(window.parent.document).contents().find("iframe")[0].contentWindow.savexzba(); 
       	  
           },
          cssClass: 'btn-success btn-xs'
          
       },{
           label: '关闭',
           action: function(dialog) {
               dialog.close();
           },
          cssClass: 'btn-danger btn-xs'
       }]
	});
}

var  viewDialog;
function chakanliyou(id){
	viewDialog=top.BootstrapDialog.show({
			    title: '查看驳回理由',
				closeByBackdrop: true,
			    message:$('<iframe frameborderno="0" id="iframe1" name="iframe1"  style="width:100%;height:100%;" frameborder="0" scrolling="no" src="${ctxPath}/renyuan/bohuixz?id='+id+'"/>'),
			    onshow:function(dlg){
		       		dlg.$modalDialog.css("width","500px");//modal-dialog
		       		$(".bootstrap-dialog-message", dlg.$modalContent).css("height","300px");//modal-dialog
		       	},
		      	buttons: [{
		           label: '取消',
		           action: function(dialog) {
		               dialog.close();
		           },
		          cssClass: 'btn-danger btn-xs'
		       }]
			});
}
</script>
<%
	}
%>