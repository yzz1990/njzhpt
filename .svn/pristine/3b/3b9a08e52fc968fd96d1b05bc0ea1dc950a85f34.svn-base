//区县下拉框联动
function getquyu(){
	$(".input-smmc").html("");
	$(".input-smkd").html("");
	
	var xian = $(".input-smqy option:selected").text().trim();
	
	//查找企业
	$.ajax({
		url:'${ctxPath}/shouchukeshihua/queryqiye.do',
		type:'post',
		data:{"page":1,"rows":1000,"xian":xian},
		dataType:'json',
		success:function(data){
			
			$(".input-smmc").append('<option value="请选择">请选择</option>');
			for(var i = 0; i < data.list.length; i++){
				 var op = '<option value='+data.list[i].qyzzjgdm+'>'+data.list[i].qymc+'</option>';
			     $(".input-smmc").append(op);
			}
		},
		error:function(){
			alert("error");
		}
	});
	
	//查找库点
	$.ajax({
		url:'${ctxPath}/shouchukeshihua/querykudian.do',
		type:'post',
		data:{"page":1,"rows":1000,"xian":xian},
		dataType:'json',
		success:function(data){
			
			$(".input-smkd").append('<option value="请选择">请选择</option>');
			for(var i = 0; i < data.list.length; i++){
				 var op = '<option value='+data.list[i].kdbm+'>'+data.list[i].kdmc+'</option>';
			     $(".input-smkd").append(op);
			}
		},
		error:function(){
			alert("error");
		}
	});
	
}

