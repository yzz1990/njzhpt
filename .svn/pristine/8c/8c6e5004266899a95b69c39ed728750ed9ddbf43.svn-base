$.fn.datetimepicker.dates['zh'] = {  
        days:       ["星期日", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六","星期日"],  
        daysShort:  ["日", "一", "二", "三", "四", "五", "六","日"],  
        daysMin:    ["日", "一", "二", "三", "四", "五", "六","日"],  
        months:     ["一月", "二月", "三月", "四月", "五月", "六月", "七月", "八月", "九月", "十月", "十一月","十二月"],  
        monthsShort:  ["一", "二", "三", "四", "五", "六", "七", "八", "九", "十", "十一", "十二"],  
        meridiem:    ["上午", "下午"],  
        //suffix:      ["st", "nd", "rd", "th"],  
        today:       "今天"  
};

    $(function(){

        var aqid = "${obj.id}";
        var qwe = "${obj.dsf_psdj}";

        if (aqid > 0) {
            $("#qyzp").toggle();
            $("#dsfps").toggle();
		}

        $('.file_upload').uploadifive({
            'auto' : true,   //自动上传
            'uploadScript' : '${ctxPath}/excel/uploadlhpzxwFile',  //处理上传文件Action路径
            'buttonClass' : 'file_upload',
            'fileObjName' : 'file',        //文件对象
            'buttonText'   : '上传附件',   //按钮显示文字
            'queueID'      : 'tip-queue', //提示信息放置目标
//	  		'fileTypeExts'     : '*.xlsx;*.xls;*.png',   //允许上传文件后缀名
            'onUploadComplete' : function(file, data) { //文件上传成功后执行
                var obj = JSON.parse(data);
                $("#scfilename").html(obj.scfilename);
                $("#fujianname").val(obj.scfilename);
                //alert(obj.filepath);
                $("#scfilename").attr("href","${ctxPath}"+obj.zp_fjpath);
                $("#scfilename").attr("download",obj.zp_fujian);
                $("#fujianpath").val(obj.zp_fjpath);

                $(function (){
                    var zpdf = $("#zp_df").val();
                    var zpdj = $("#zp_dj").val();
                    var zprq = $("#zp_date").val();
                    var tishi = "";
                    if(zpdf == null || zpdf == "" ){
                        tishi += "请填写自评得分 ";
                    }
                    if(zpdj == null || zpdj == "" ){
                        tishi += "请选择自评等级 ";
                    }
                    if (zprq == null || zprq == "") {
                        tishi += "请填写自评日期";
                    }
                    if(tishi != ""){
                        $("#zhuanye").val("");
                        alert(tishi);
                    }else{
                        $("#zpzhuangtai").val("1");
                        $("#dsfps").toggle();
                    }

                });
            }
        });

        $('.file_upload2').uploadifive({
            'auto' : true,   //自动上传
            'uploadScript' : '${ctxPath}/excel/uploadlhpzxwFile',  //处理上传文件Action路径
            'buttonClass' : 'file_upload',
            'fileObjName' : 'file',        //文件对象
            'buttonText'   : '上传附件',   //按钮显示文字
            'queueID'      : 'dsftip-queue', //提示信息放置目标
//	  		'fileTypeExts'     : '*.xlsx;*.xls;*.png',   //允许上传文件后缀名
            'onUploadComplete' : function(file, data) { //文件上传成功后执行
                var obj = JSON.parse(data);
                $("#dsfscfilename").html(obj.scfilename);
                $("#dsffujianname").val(obj.scfilename);
                //alert(obj.filepath);
                $("#dsfscfilename").attr("href","${ctxPath}"+obj.dsf_fjpath);
                $("#dsfscfilename").attr("download",obj.dsf_fujian);
                $("#dsffujianpath").val(obj.dsf_fjpath);
                $("#dsfzhuangtai").val("1");

            }
        });

    });

function saveaqsc() {
	var quyu = $("#quyu").val();
	var qiyeId = $("#qiyeId").val();
	var tishi = "";
	if(quyu == null || quyu == "" || quyu == "请选择"){
		tishi += "请选择行政区划 ";
	}
	if(qiyeId == null || qiyeId == "" || qiyeId == "请选择"){
		tishi += "请选择企业 ";
	}
	if(tishi != ""){
		alert(tishi);
	}else{
		var form = $("#contentform");
		$.ajax({
			url: form.attr("action"),
			dataType: "json",
			data: form.serialize(),
			success: function(msg) {
				if (!msg.ret) {
					alert(msg.message);
				} else {
					alert("保存成功");
				}
			}
		});
	}
	
}

