    $("#cckd").append(op);
    
    $.ajax({
		url:'${ctxPath}/shouchukeshihua/querykudian.do',
		type:'post',
		data:{"page":1,"rows":1000,"qyzzjgdm":qyzzjgdm},
		dataType:'json',
		success:function(data){
			
			for(var i = 0; i < data.list.length; i++){
				//插入库点名称
				var op = '<option value='+data.list[i].kdbm+'>'+data.list[i].kdmc+'</option>';
			    $("#cckd").append(op);
			}
		},
		error:function(){
			alert("error");
		}
	});
    
}

