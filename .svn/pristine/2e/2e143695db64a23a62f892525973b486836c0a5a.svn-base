<%
 layout("/WEB-INF/web/ui/cssjs_app.html"){}
%>

<!----------dataTables-------------->
<link href='${ctxPath}/resource/jquery.dataTables.min.css' rel='stylesheet'>
<script src="${ctxPath}/resource/jquery.dataTables.min.js"></script>
<script src='${ctxPath}/resource/dataTables.bootstrap.min.js'></script>
<script src="${ctxPath}/resource/datagrid.js"></script>
<!----------dataTables-------------->

<style>
.table>tbody>tr>td {
   font-size:22px;
   text-align:right;
   vertical-align:middle;
}
.table>thead>tr>th{
	text-align:center;
	vertical-align:middle;
	font-size:22px;
}
.div_center{
	text-align:center;
}
</style>

<script type="text/javascript">
	$(function(){
	datatable = $('#cfzt').DataTable({
		"processing": true,
		//"serverSide": true,
		"paging": false,
		"info": false,
		"columns": [
			{
				"render": function (data,type,row,meta) {
					var div = '<div class="div_center">'+(row["orderno"]+1)+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var name = row["name"];
					var div = '<div class="div_center">'+name+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var whky = row["whky"];
					var div = '<div class="">'+(whky).toFixed(0)+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var xdx = row["xdx"];
					var div = '<div class="">'+(xdx).toFixed(0)+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var dbf = row["dbf"];
					var div = '<div class="">'+(dbf).toFixed(0)+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var dcc = row["dcc"];
					var div = '<div class="">'+(dcc).toFixed(0)+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var sjk = row["sjk"];
					var div = '<div class="">'+(sjk).toFixed(0)+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var qt = row["qt"];
					var div = '<div class="">'+(qt).toFixed(0)+'</div>';
					return div;
				}
			}
		]
	})
 })
</script>
<meta content="width=device-width, initial-scale=0.5, maximum-scale=0.5, user-scalable=0;" name="viewport" />
<div class="row">
	<div class="col-lg-12">
		<div class="well" style="width:100%;height: 95%;">
			<span style="width: 200px;font-size: 25px;margin-left:100px;">仓房状态统计</span>&nbsp;&nbsp;<span style="font-size: 25px;">(单位/吨)</span>
			<hr size="1" color="#A9B2B8" style="margin-left: -10px;border: 2px;height: 300px;margin-top: 10px;width: 100%;height: 2px;">
           	<table id="cfzt"  class="table table-striped table-hover table-bordered datatables" style="width: 100%; height: 90%;float: left;"  data-url="${ctxPath}/zonghe/findcfzt">
				<thead>
				<tr>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">编号</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">地区</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">完好可用</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">需大修</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">待报废</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">待拆除</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">死角仓</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">其他</th>
				</tr>
				</thead>
			</table>   
         </div>
	</div>		
</div>