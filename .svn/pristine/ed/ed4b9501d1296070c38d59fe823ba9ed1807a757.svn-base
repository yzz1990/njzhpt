function upprice(bjid){
	var strs = bjid.split(",");
	var price = prompt("请修改价格",strs[1]);
	if(price != null && price != "" && !isNaN(price)){
		$.ajax({
			url:'${ctxPath}/jiage/upprice',
			type:'post',
			data:{"bjid":strs[0],"price":price},
			dataType:'json',
			success:function(msg){
				alert(msg.message);
				datatable.ajax.reload(null,true);
			},
			error:function(){
				alert("修改价格失败");
			}
		});
	}else if(price == null){
	}else{
		alert("请输入正确的价格");
	}
}



