		function myformatter(date) {
				var y = date.getFullYear();
				var m = date.getMonth() + 1;
				var d = date.getDate();
				var h = date.getHours();
				var M = date.getMinutes();
				var s = date.getSeconds();
				return y + '-' + (m < 10 ? ('0' + m) : m) + '-'
						+ (d < 10 ? ('0' + d) : d) + ' '
						+ (h < 10 ? ('0' + h) : h) + ':'
						+ (M < 10 ? ('0' + M) : M) + ':'
						+ (s < 10 ? ('0' + s) : s);
			}	
	
