			bnqmprice = bnqmprice.slice(0,6);
			jdny.reverse();
			bnny.reverse();
			ndny.reverse();
			//季度价格
			jddpprice.reverse();
			jdddprice.reverse();
			jddyprice.reverse();
			jdymprice.reverse();
			jdcyprice.reverse();
			jdqmprice.reverse();
			//半年度价格
			bndpprice.reverse();
			bnddprice.reverse();
			bndyprice.reverse();
			bnymprice.reverse();
			bncyprice.reverse();
			bnqmprice.reverse();
			//年度
			nddpprice.reverse();
			ndddprice.reverse();
			nddyprice.reverse();
			ndymprice.reverse();
			ndcyprice.reverse();
			ndqmprice.reverse();
			
			
			var myChart = echarts.init(document.getElementById('paneljidu')); 	//季度趋势
			var myChart1 = echarts.init(document.getElementById('panelbannian'));	//半年趋势
			var myChart2 = echarts.init(document.getElementById('panelniandu')); 	//年度趋势
			//季度折线图
			option = {
			    title: {
			        text: '季度国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz
