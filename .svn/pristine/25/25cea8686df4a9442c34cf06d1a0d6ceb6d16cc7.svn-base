public class DocUtil {
	  private Configuration configuration = null;  
      
	    public DocUtil(){  
	        configuration = new Configuration();  
	        configuration.setDefaultEncoding("UTF-8");  
	    }  
	      
	   
     /**
      * 根据Doc模板生成word文件
      * @param dataMap Map 需要填入模板的数据
      * @param fileName 文件名称
      * @param savePath 保存路径
      */
   
     public  double createDoc(Map<String,Object>  dataMap,String fileName,String savePath){
    	 
    	 File dirfile =new File("D:/upload"); 
    	 if  (!dirfile .exists()  && !dirfile .isDirectory())      
    	 {       
    		 System.out.println("*******////////////******");
    		 dirfile .mkdir();    
    	 }
    	 
          configuration.setClassForTemplateLoading(this.getClass(), "/");  //FTL文件所存在的位置  
          Template t=null;  
          try {  
              t = configuration.getTemplate(fileName+".ftl"); //文件名  
          } catch (IOException e) {  
              e.printStackTrace();  
          }  
        //  File outFile = new File("D:/upload/"+Math.random()*10000+".doc");
          double docname=Math.random()*10000;
            File outFile = new File(savePath+docname+".doc");
          System.out.println(outFile);
          Writer out = null;  
          try {  
              out = new BufferedWriter(new OutputStreamWriter(new FileOutputStream(outFile)));  
          
          } catch (FileNotFoundException e1) {  
              e1.printStackTrace();  
          }  
             
          try {  
              t.process(dataMap, out);  
          } catch (TemplateException e) {  
              e.printStackTrace();  
          } catch (IOException e) {  
              e.printStackTrace();  
          }
		return docname;  
     }
     
