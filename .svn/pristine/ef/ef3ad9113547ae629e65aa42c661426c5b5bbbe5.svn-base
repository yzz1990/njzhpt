<%
 layout("/WEB-INF/web/ui/cssjs_app.html"){}
%>
<!----------dataTables-------------->
<link href='${ctxPath}/resource/jquery.dataTables.min.css' rel='stylesheet'>
<script src="${ctxPath}/resource/jquery.dataTables.min.js"></script>
<script src='${ctxPath}/resource/dataTables.bootstrap.min.js'></script>
<script src="${ctxPath}/resource/datagrid.js"></script>
<!----------dataTables-------------->
<style>
.table>tbody>tr>td {
	font-size:22px;
	text-align:right;
	vertical-align:middle;
}
.table>thead>tr>th{
	text-align:center;
	vertical-align:middle;
	font-size:22px;
	height:60px;
}
.div_center{
	text-align:center;
	font-size:22px;
}
</style>

<script type="text/javascript">
$(function () {
	//烘干能力
	datatable = $('#hgnltj').DataTable({
		"processing": true,
		//"serverSide": true,
		"paging": false,
		"info": false,
		"columns": [
			{
				"render": function (data,type,row,meta) {
					var div = '<div class="div_center">'+(row["orderno"]+1)+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var name = row["name"];
					var div = '<div class="div_center">'+name+'</div>';
					return div;
				}
			},{
				"render": function (data,type,row,meta) {
					var hgnl= row["hgnl"];
					var name = row["name"];
					var div = '<div class="">'+hgnl.toFixed(0)+'</div>';
					return div;
				}
			}
		]
	});

});	
</script>
<meta content="width=device-width, initial-scale=0.5, maximum-scale=0.5, user-scalable=0;" name="viewport" />
<div class="row" style="width:100%;height: 95%;">
	<div class="col-lg-12" style="width:100%;height: 100%;">
		<div class="well" style="width:100%;height: 100%;">
			<span style="width: 200px;font-size: 25px;margin-left:100px">烘干能力统计</span>&nbsp;&nbsp;<span style="font-size: 25px;">(吨/天)</span>
			<hr size="1" color="#A9B2B8" style="margin-left: -10px;border: 2px;margin-top: 10px;width: 100%;height: 2px;">
	        <table id="hgnltj"  class="table table-striped table-hover table-bordered datatables" style="width: 100%;height:90%;float: left;" data-url="${ctxPath}/zonghe/findhgnl">
				<thead>
				<tr>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">编号</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">区域</th>
					<th rowspan="1" style="vertical-align:middle;text-align:center;">烘干能力</th>
				</tr>
				</thead>
			</table>
		</div>		
	</div>
</div>