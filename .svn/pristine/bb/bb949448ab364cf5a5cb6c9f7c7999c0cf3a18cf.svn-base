//================================地区变换方法=====================================
function Changedq(){
	$(".input-smqy").html("");
	$(".input-smkdmc").html("");
	
	xian = $(".input-smdq option:selected").val();
	
	//查找企业
	$.ajax({
		url:'${ctxPath}/shouchukeshihua/queryqiye.do',
		type:'post',
		data:{"xian":"${array.contain(session.userinfo.auth,'auth_select_part')?session.userinfo.area.name:'"+xian+"'}"
			,"qymc":"${array.contain(session.userinfo.auth,'auth_company')?session.userinfo.dep.name:''}"},
		dataType:'json',
		success:function(data){
			
			$(".div-qiye").find(".select2-selection__rendered").text("全部企业");
			$(".div-qiye").find(".select2-selection__rendered").attr("title","全部企业");
			
			$(".input-smqy").append('<option value="请选择">全部企业</option>');
			for(var i = 0; i < data.list.length; i++){
				 var op = '<option value='+data.list[i].qyzzjgdm+'>'+data.list[i].qymc+'</option>';
			     $(".input-smqy").append(op);
			}
		},
		error:function(){
			alert("error");
		}
	});
	
	//查找库点
	$.ajax({
		url:'${ctxPath}/shouchukeshihua/querykudian.do',
		type:'post',
		data:{"xian":"${array.contain(session.userinfo.auth,'auth_select_part')?session.userinfo.area.name:'"+xian+"'}"
			,"qymc":"${array.contain(session.userinfo.auth,'auth_company')?session.userinfo.dep.name:''}"},
		dataType:'json',
		success:function(data){
			$(".div-kudian").find(".select2-selection__rendered").text("全部库点");
			$(".div-kudian").find(".select2-selection__rendered").attr("title","全部库点");
			
			$(".input-smkdmc").append('<option value="请选择">全部库点</option>');
			for(var i = 0; i < data.list.length; i++){
				 var op = '<option value='+data.list[i].kdmc+'>'+data.list[i].kdmc+'</option>';
			     $(".input-smkdmc").append(op);
			}
		},
		error:function(){
			alert("error");
		}
	});
}
//======================================地区变换方法结束================================
	 

//===================================企业下拉框change事件=================================
function Changeqy(){
	$(".input-smkdmc").val("");
	qyzzjgdm = $(".input-smqy option:selected").val();
	$.ajax({
		url:'${ctxPath}/shouchukeshihua/querykudian.do',
		type:'post',
		data:{"page":1,"rows":1000,"qyzzjgdm":qyzzjgdm,
			"qymc":"${array.contain(session.userinfo.auth,'auth_company')?session.userinfo.dep.name:''}"},
		dataType:'json',
		success:function(data){
			$(".input-smkdmc").html("");
			$(".div-kudian").find(".select2-selection__rendered").text("全部库点");
			$(".div-kudian").find(".select2-selection__rendered").attr("title","全部库点");
			
			$(".input-smkdmc").append('<option value="请选择" selected="true">全部库点</option>');
			for(var i = 0; i < data.list.length; i++){
				//插入库点名称
				var op = '<option value='+data.list[i].kdmc+'>'+data.list[i].kdmc+'</option>';
			    $(".input-smkdmc").append(op);
			}
		},
		error:function(){
			alert("error");
		}
	});
}
