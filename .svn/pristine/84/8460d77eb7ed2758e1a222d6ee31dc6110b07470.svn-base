<script type="text/javascript">
var mydate = new Date();
var vyear = mydate.getFullYear();
var vmonth = mydate.getMonth();

$(window).load(function() {
	$(".cjd-select").select2();
	//加载年度下拉框
	for(var i = 0; i < 5 ; i++){
		var op = '<option value="'+(vyear-i)+'">'+(vyear-i)+'</option>';
		$("#niandu").append(op);
	}
	//初始化采价点下拉框
	$("#niandu").val("");
    $("#niandu-div").find(".select2-selection__rendered").text("");
	$("#niandu-div").find(".select2-selection__rendered").attr("title","");
	//初始化采价点下拉框
	$("#yuedu").val("");
    $("#yuedu-div").find(".select2-selection__rendered").text("");
	$("#yuedu-div").find(".select2-selection__rendered").attr("title","");
	
});

$(function(){
	var qmonth;
	var qyear;
	if(vmonth > 0){
		qmonth = vmonth;
		qyear = vyear;
	}else{
		qmonth = 12;
		qyear = vyear - 1;
	}
	searchym(qyear,qmonth);	
});

//生成期货价格表
function doSearch(){
	var year = $("#niandu option:selected").val();
	var month = $("#yuedu option:selected").val();
	searchym(year,month);
}

function searchym(year,month){
	$.ajax({
		url:'${ctxPath}/jiage/findqihuo',
		type:'post',
		data:{"year":year,"month":month},
		dataType:'json',
		success:function(data){
			$.each(data.list.list,function(i, n){
				if(n.pinzhong == "豆粕"){
					$("#dp_price").text(n.price);
					if((n.price - n.hprice) > 0){
						$("#dp_price").html(n.price + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#dp_price").html(n.price + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#tb_dp_zze").text(n.price - n.tprice);
					$("#tb_dp_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#hb_dp_zze").text(n.price - n.hprice);
					$("#hb_dp_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "大豆"){
					$("#dd_price").text(n.price);
					if((n.price - n.hprice) > 0){
						$("#dd_price").html(n.price + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#dd_price").html(n.price + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#tb_dd_zze").text(n.price - n.tprice);
					$("#tb_dd_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#hb_dd_zze").text(n.price - n.hprice);
					$("#hb_dd_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "豆油"){
					$("#dy_price").text(n.price);
					if((n.price - n.hprice) > 0){
						$("#dy_price").html(n.price + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#dy_price").html(n.price + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#tb_dy_zze").text(n.price - n.tprice);
					$("#tb_dy_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#hb_dy_zze").text(n.price - n.hprice);
					$("#hb_dy_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "玉米"){
					$("#ym_price").text(n.price);
					if((n.price - n.hprice) > 0){
						$("#ym_price").html(n.price + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#ym_price").html(n.price + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#tb_ym_zze").text(n.price - n.tprice);
					$("#tb_ym_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#hb_ym_zze").text(n.price - n.hprice);
					$("#hb_ym_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "菜油"){
					$("#cy_price").text(n.price);
					if((n.price - n.hprice) > 0){
						$("#cy_price").html(n.price + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#cy_price").html(n.price + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#tb_cy_zze").text(n.price - n.tprice);
					$("#tb_cy_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#hb_cy_zze").text(n.price - n.hprice);
					$("#hb_cy_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
				if(n.pinzhong == "强麦"){
					$("#qm_price").text(n.price);
					if((n.price - n.hprice) > 0){
						$("#qm_price").html(n.price + '<img src="${ctxPath}/img/jiage/redarray.png" width="10"  height="20">');
					}else if((n.price - n.hprice) < 0){
						$("#qm_price").html(n.price + '<img src="${ctxPath}/img/jiage/greenarray.png" width="10"  height="20">');
					}
					$("#tb_qm_zze").text(n.price - n.tprice);
					$("#tb_qm_zf").text(((n.price / n.tprice - 1) * 100).toFixed(2) + "%");
					$("#hb_qm_zze").text(n.price - n.hprice);
					$("#hb_qm_zf").text(((n.price / n.hprice - 1) * 100).toFixed(2) + "%");
				}
			});
		},
		error:function(){
			alert("生成期货价格表失败");
		}
	});
	
	
	$.ajax({
		url:'${ctxPath}/jiage/queryqihuo.do',
		type:'post',
		data:{"year":year,"month":month},
		dataType:'json',
		success:function(data){
			var pz = ["豆粕","大豆","豆油","玉米","菜油","强麦"];
			//年月
			var jdny = [];
			var bnny = [];
			var ndny = [];
			//季度价格
			var jddpprice = [];
			var jdddprice = [];
			var jddyprice = [];
			var jdymprice = [];
			var jdcyprice = [];
			var jdqmprice = [];
			//半年度价格
			var bndpprice = [];
			var bnddprice = [];
			var bndyprice = [];
			var bnymprice = [];
			var bncyprice = [];
			var bnqmprice = [];
			//年度
			var nddpprice = [];
			var ndddprice = [];
			var nddyprice = [];
			var ndymprice = [];
			var ndcyprice = [];
			var ndqmprice = [];
			//季度
			var lmonth = month;
			jdny.push(year+"年"+month+"月");
			bnny.push(year+"年"+month+"月");
			ndny.push(year+"年"+month+"月");
			for(var i = 0; i < 72; i ++){
				//把时间放入数组
				if(data.list[i].month != lmonth ){
					jdny.push(data.list[i].year+"年"+data.list[i].month+"月");
					bnny.push(data.list[i].year+"年"+data.list[i].month+"月");
					ndny.push(data.list[i].year+"年"+data.list[i].month+"月");
					lmonth = data.list[i].month;
				}
				if(data.list[i].pinzhong == "豆粕"){
					jddpprice.push(data.list[i].price);
					bndpprice.push(data.list[i].price);
					nddpprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "大豆"){
					jdddprice.push(data.list[i].price);
					bnddprice.push(data.list[i].price);
					ndddprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "豆油"){
					jddyprice.push(data.list[i].price);
					bndyprice.push(data.list[i].price);
					nddyprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "玉米"){
					jdymprice.push(data.list[i].price);
					bnymprice.push(data.list[i].price);
					ndymprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "菜油"){
					jdcyprice.push(data.list[i].price);
					bncyprice.push(data.list[i].price);
					ndcyprice.push(data.list[i].price);
				}
				if(data.list[i].pinzhong == "强麦"){
					jdqmprice.push(data.list[i].price);
					bnqmprice.push(data.list[i].price);
					ndqmprice.push(data.list[i].price);
				}
				
			}
			//截取季度和半年度的时间及价格
			jdny = jdny.slice(0,3);
			bnny = bnny.slice(0,6);
			//豆粕
			jddpprice = jddpprice.slice(0,3);
			bndpprice = bndpprice.slice(0,6);
			//大豆
			jdddprice = jdddprice.slice(0,3);
			bnddprice = bnddprice.slice(0,6);
			//豆油
			jddyprice = jddyprice.slice(0,3);
			bndyprice = bndyprice.slice(0,6);
			//玉米
			jdymprice = jdymprice.slice(0,3);
			bnymprice = bnymprice.slice(0,6);
			//菜油
			jdcyprice = jdcyprice.slice(0,3);
			bncyprice = bncyprice.slice(0,6);
			//强麦
			jdqmprice = jdqmprice.slice(0,3);
			bnqmprice = bnqmprice.slice(0,6);
			jdny.reverse();
			bnny.reverse();
			ndny.reverse();
			//季度价格
			jddpprice.reverse();
			jdddprice.reverse();
			jddyprice.reverse();
			jdymprice.reverse();
			jdcyprice.reverse();
			jdqmprice.reverse();
			//半年度价格
			bndpprice.reverse();
			bnddprice.reverse();
			bndyprice.reverse();
			bnymprice.reverse();
			bncyprice.reverse();
			bnqmprice.reverse();
			//年度
			nddpprice.reverse();
			ndddprice.reverse();
			nddyprice.reverse();
			ndymprice.reverse();
			ndcyprice.reverse();
			ndqmprice.reverse();
			
			
			var myChart = echarts.init(document.getElementById('paneljidu')); 	//季度趋势
			var myChart1 = echarts.init(document.getElementById('panelbannian'));	//半年趋势
			var myChart2 = echarts.init(document.getElementById('panelniandu')); 	//年度趋势
			//季度折线图
			option = {
			    title: {
			        text: '季度国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data: jdny
			    },
			    yAxis: {
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:jddpprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:jdddprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:jddyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:jdymprice,
			        },
			        {
			            name:pz[4],
			            type:'line',
			            data:jdcyprice,
			        },
			        {
			            name:pz[5],
			            type:'line',
			            data:jdqmprice,
			        }
			        
			    ]
			};
			myChart.setOption(option);
			
			//半年度折线图
			option1 = {
			    title: {
			        text: '半年国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data: bnny
			    },
			    yAxis: {
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:bndpprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:bnddprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:bndyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:bnymprice,
			        },
			        {
			            name:pz[4],
			            type:'line',
			            data:bncyprice,
			        },
			        {
			            name:pz[5],
			            type:'line',
			            data:bnqmprice,
			        }
			        
			    ]
			};
			myChart1.setOption(option1);
			
			//半年度折线图
			option2 = {
			    title: {
			        text: '一年国内期货价格趋势图',
			    },
			    tooltip: {
			        trigger: 'axis'
			    },
			    legend: {
			        data:pz
			    },
			    xAxis:  {
			        type: 'category',
			        boundaryGap: false,
			        data: ndny
			    },
			    yAxis: {
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:nddpprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:ndddprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:nddyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:ndymprice,
			        },
			        {
			            name:pz[4],
			            type:'line',
			            data:ndcyprice,
			        },
			        {
			            name:pz[5],
			            type:'line',
			            data:ndqmprice,
			        }
			        
			    ]
			};
			myChart2.setOption(option2);
			
		},
		error:function(){
			alert("遍历国内期货连续失败");
		}
	});
}

function getjd(){
	$("#paneljidu").css('display','block');
	$("#panelbannian").css('display','none');
	$("#panelniandu").css('display','none');
}
function getbn(){
	$("#paneljidu").css('display','none');
	$("#panelbannian").css('display','block');
	$("#panelniandu").css('display','none');
}
function getyn(){
	$("#paneljidu").css('display','none');
	$("#panelbannian").css('display','none');
	$("#panelniandu").css('display','block');
}

</script>
