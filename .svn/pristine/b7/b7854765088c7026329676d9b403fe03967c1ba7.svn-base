<script type="text/javascript">
$("#xzqhdm").select2();
$("#qyzzjgdm").select2();
$("#kdbm").select2();
$(".sel2").select2();
$.ajax({
	 url:'${ctxPath}/zhiliangGL/selectQuYu',
	 type:'post',
	 //data:{"page":1,"rows":10},
	 dataType:'json',
	 data:{},
	 success:function(data){
		$.each(data.list,function(i, n){
				$("#xzqhdm").append("<option value="+n.xzqhdm+">"+n.name+"</option>");
		});
		 
	 },
	 error:function(){
		 alert("error");
	 }
	
});
var index=0;
var date=new Date;
var year=parseInt(date.getFullYear());
function appendcftr(){
	if(""==$("#kdbm").val()){
