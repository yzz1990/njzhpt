			    },
			    yAxis: {
			        type: 'value',
			        axisLabel: {
			            formatter: '{value}'
			        }
			    },
			    series: [
			        {
			            name:pz[0],
			            type:'line',
			            data:bndpprice,
			        },
			        {
			            name:pz[1],
			            type:'line',
			            data:bnddprice,
			        },
			        {
			            name:pz[2],
			            type:'line',
			            data:bndyprice,
			        }
			        ,
			        {
			            name:pz[3],
			            type:'line',
			            data:bnymprice,
			        },
			        {
			            name:pz[4],
			            type:'line',
			            data:bncyprice,
			        },
			        {
			            name:pz[5],
			            type:'line',
			            data:bnqmprice,
			        }
			        
