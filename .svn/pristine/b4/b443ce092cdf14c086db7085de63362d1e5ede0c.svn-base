		 obj = @com.zkzy.njzhpt.dao.ChuBeiLiangJHDAO.querycbljhById({"id":parameter.id,"page":1,"rows":15}).getList().get(0);
		action = ctxPath+"/lunhuan/saveLHSQ.do";
