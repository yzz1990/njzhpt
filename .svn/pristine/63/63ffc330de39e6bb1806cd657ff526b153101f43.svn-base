	//企业下拉框值改变时 联动查询库点名称
	function selectKDMC(){
		$("#lhsq_kdmc").html("");
		var xian = $("#szqy").val();
		var qymc=$("#qymc").val();
		var qyzzjgdm="";
		$.ajax({
			url:'${ctxPath}/shouchukeshihua/findquxian',
			type:'post',
			data:{"name":xian},
			dataType:'json',
			success:function(data){
				$("#xzqhdm").val(data[0].xzqhdm);
			},
			error:function(){
				alert("error");
			}
			
			
		});
		$.ajax({
			url:'${ctxPath}/shouchukeshihua/queryqiye.do',
			type:'post',
			data:{"qymc":qymc},
			dataType:'json',
			success:function(data){
				qyzzjgdm=data.list[0].qyzzjgdm;
				$("#qymcc").val(qyzzjgdm);
				$.ajax({
					url:'${ctxPath}/lunhuan/findcckd',
